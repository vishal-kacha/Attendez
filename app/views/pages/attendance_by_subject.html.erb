
<h1>Attendance Details for <%= params[:subject_name] %></h1>

<% if @attendances.present? %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% @attendances.each do |attendance| %>
        <tr>
          <td><%= attendance.created_at.strftime('%Y-%m-%d') %></td>
          <td><%= attendance.status ? 'Present' : 'Absent' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No attendance data available for <%= params[:subject_name] %>.</p>
<% end %>
